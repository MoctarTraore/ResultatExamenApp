<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.VBox?>

<!-- Lien vers le contrôleur -->
<GridPane xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/8" fx:controller="com.example.resultatexamen.MainController" alignment="CENTER" hgap="10" vgap="10">

    <VBox spacing="10" alignment="CENTER">
        <Label text="RESULTATS BTS 2024" style="-fx-font-size: 24px; -fx-font-weight: bold;" />
        <Label text="Veuillez entrer votre Matricule (ex: BTS202400001) pour consulter votre résultat." wrapText="true" style="-fx-font-size: 14px;" />
        <Label text="Matricule :" style="-fx-font-size: 16px;" />
        <TextField fx:id="matriculeField" promptText="ex: BTS2024000001" style="-fx-font-size: 14px;" />
        <Button text="Consulter" fx:id="consulterButton" onAction="#onConsulterButtonClicked" style="-fx-background-color: #1A73E8; -fx-text-fill: white; -fx-font-size: 16px; -fx-padding: 10px 20px;" />
    </VBox>

</GridPane>
